<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dialog_notification"
    android:layout_margin="@dimen/margin_3dp"
    android:alpha="1"
    android:padding="@dimen/dialog_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@drawable/boder_blue"
        android:padding="@dimen/padding_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="0.2"
                android:text="Thông báo"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/txt_size_24sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtBody"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"></TextView>
            <ImageView
                android:id="@+id/imageNotification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="0.5"
                    android:background="@color/color_blue"
                    android:gravity="center"
                    android:padding="@dimen/padding_5dp"
                    android:text="@string/title_cancel"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_15" />

                <Button
                    android:id="@+id/btnView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_5dp"
                    android:layout_weight="0.5"
                    android:background="@color/color_blue"
                    android:gravity="center"
                    android:padding="@dimen/padding_5dp"
                    android:text="@string/cap_view"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/icon_notification" />
    </FrameLayout>

</FrameLayout>
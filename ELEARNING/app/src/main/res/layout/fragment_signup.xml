<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_5dp"
    android:background="@drawable/background_login"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <include
                android:id="@+id/vgEmail"
                layout="@layout/viewgroup_input_text"></include>

            <include
                android:id="@+id/vgPassword"
                layout="@layout/viewgroup_input_pass"></include>

            <include
                android:id="@+id/vgPasswordConfirm"
                layout="@layout/viewgroup_input_text"></include>

            <include
                android:id="@+id/vgFirstName"
                layout="@layout/viewgroup_input_text"></include>

            <include
                android:id="@+id/vgLastName"
                layout="@layout/viewgroup_input_text"></include>


            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@color/color_blue_light"
                android:text="@string/signUp"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
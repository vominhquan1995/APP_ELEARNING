<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_3dp"
    android:padding="@dimen/dialog_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@drawable/boder_blue"
        android:padding="@dimen/padding_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_50dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Congratulations"
                android:textColor="@color/color_blue_light"
                android:textSize="@dimen/txt_size_24sp"></TextView>

            <TextView
                android:id="@+id/txtBody"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="Bạn trả lời đúng 3 trên 5 câu"
                android:textColor="@color/color_black"
                android:textSize="@dimen/text_size_18"></TextView>

            <Button
                android:id="@+id/btnOk"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="0.2"
                android:background="@color/color_blue"
                android:padding="@dimen/padding_5dp"
                android:text="@string/cap_continute"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/result_pass" />
    </FrameLayout>

</FrameLayout>